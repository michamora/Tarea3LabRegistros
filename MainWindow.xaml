<Window x:Class="Tarea3LabRegistros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea3LabRegistros"
        mc:Ignorable="d"
        Title="Sistemas de Registros" Height="300" Width="400">
    <Grid>

        <StackPanel> 
            <Menu> 
                <MenuItem Header="Registro Carreras" Background = "#FF98FB98">
                    <MenuItem Header="📝Carreras" x:Name="rCarreras" Click ="RegistroCarrerasMenuItem_Click" /> 
                </MenuItem>

                <MenuItem Header="Registro Estudiantes" Background = "#FFADD8E6" >
                    <MenuItem Header="🧑🏻Estudiantes" x:Name="rEstudiantes" Click ="RegistroEstudiantesMenuItem_Click" />  
                </MenuItem>
            </Menu>

        </StackPanel>

    </Grid>
</Window>