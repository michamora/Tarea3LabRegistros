<Window x:Class="Tarea3LabRegistros.UI.Registro2.rEstudiantes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea3LabRegistros.UI.Registro2"
        mc:Ignorable="d"
        Title="Registro de Estudiantes" Height="400" Width="300">
    <Grid>

        <StackPanel Orientation="Vertical" Margin="10"> 
           
           <!-- EstudianteId -->
            <StackPanel Orientation="Vertical">
                <Label Content="Id:"/>

                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding EstudianteId}" Width="50" />
                    <Button Content="🔎 Buscar" Click="BuscarButton_Click" /> 
                </StackPanel>
            </StackPanel>


           <!-- GRUPO -->
            <Label Content="Nombre:"/>
            <TextBox  x:Name="NombresTextBox" Text="{Binding Nombres}" Width="200" />
            <Label Content="Email:"/>
            <TextBox  x:Name="EmailTextBox" Text="{Binding Email}" Width="200" />

            <!-- COMBOBOX -->
                <Label Content="Carrera ID:"/>
                <ComboBox x:Name="CarreraIdComboBox" Width="200">
                    <ComboBox.Items> 
                        <ComboBoxItem Content="" />
                        <ComboBoxItem Content="Contabilidad" />
                        <ComboBoxItem Content="Diseño Grafico" />
                        <ComboBoxItem Content="Ingeniería Civil" />
                        <ComboBoxItem Content="Ingeniería Financiera" />
                        <ComboBoxItem Content="Medicina" />
                        <ComboBoxItem Content="Odontología" />
                        <ComboBoxItem Content="Ciencias Sociales" />

                        
                    </ComboBox.Items>
                </ComboBox>

            <Label Content="Activo:"/>
            <TextBox  x:Name="ActivoTextBox" Text="{Binding Activo}" Width="200" />


            <!-- BOTONES -->
            <StackPanel 
                        Margin="0,16,0,0"                      
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" >
                
                
                <Button Content="📥 Guardar" Click="GuardarButton_Click" />
                <Button Content="⚙️ Editar" Click="EditarButton_Click"/>
                <Button Content="❌ Eliminar" Click="EliminarButton_Click"/>
                <Button Content="✅ Validar" Click="ValidarButton_Click"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>